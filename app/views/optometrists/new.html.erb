<h2>Create New Optometrist</h2>

<% if @optometrist.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@optometrist.errors.count), "error" %>

    <ul>
    <%=optometrist.errors.full_messages.each do |error| %>
        <li><%= error %></li>
    <% end %>
    </ul>
    </div>
<% end %>

<%= form_for(@optometrist) do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br><br>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br><br>

    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number %><br><br>

    <%= f.label :email %>
    <%= f.email_field :optometrist_email %><br><br>

    <%= f.label :address %>
    <%= f.text_field :address %><br><br>

    <%= f.label :notes %>
    <%= f.text_area :notes %><br><br><br>

    <%= f.submit %>

<% end %>
