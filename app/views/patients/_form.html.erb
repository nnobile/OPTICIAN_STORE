<%= form_for @patient do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br><br>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br><br>

    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number %><br><br>

    <%= f.label :email %>
    <%= f.email_field :email %><br><br>

    <%= f.label :address %>
    <%= f.text_field :address %><br><br>

    <%= f.label :birthdate %>
    <%= f.date_field :birthdate %><br><br>

    <%= f.label :total_revenue %>
    <%= f.number_field :total_revenue, min: 0, step: 0.01 %><br><br>

    <%= f.label :notes %>
    <%= f.text_area :notes %><br><br><br>

    <%= f.label :optometrist %>
    <%= f.fields_for :optometrist do |o| %>
        <%= o.label :first_name %>
        <%= o.text_field :first_name %>
    <% end %>

    <%= f.submit %>

<% end %>
