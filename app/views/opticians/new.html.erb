<h1>Optician Registration</h1>
<h3>Please fill out the below form and click "Register" once complete.</h3>

<%=form_for(@optician) do |f| %>

    <div><br>
    <%= f.label :first_name, :required => true %>
    <%= f.text_field :first_name %>
    </div></br>

    <div><br>
    <%= f.label :last_name, :required => true %> 
    <%= f.text_field :last_name %>
    </div></br>

    <div><br>
    <%= f.label :username, :required => true %> 
    <%= f.text_field :username %>
    </div></br>

    <div><br>
    <%= f.label :password, :required => true %>
    <%= f.password_field :password %>
    </div></br>

    <div><br>
    <%= f.label :email, :required => true %> 
    <%= f.email_field :email %>
    </div></br>

    <div><br>
    <%= f.label :phone_number, :required => true %> 
    <%= f.text_field :phone_number %>
    </div></br>

    <div><br>
    <%= f.label :certificate_number, :required => true %> 
    <%= f.text_field :certificate_number %>
    </div></br>

    <div><br>
    <%= f.submit "Register" %>
    </div></br>

<% end %>